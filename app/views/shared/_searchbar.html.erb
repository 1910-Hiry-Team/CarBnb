<div class="container">
      <%= form_with(url: search_cars_path, method: :get, local: true) do |f| %>
        <div>
          <label for="car_type">Car Type</label>
          <%= f.select :car_type, ['Coupe', 'Convertible', 'Hatchback', 'Sedan', 'SUV', 'Truck', 'Van'], include_blank: 'Choose...' %>
        </div>
        <div>
          <label for="address">Address</label>
          <%= f.text_field :address, placeholder: 'Enter a location' %>
        </div>
        <div>
          <label for="radius">Radius (miles)</label>
          <%= f.select :radius, [5, 10, 20, 500] %>
        </div>
        <div>
          <label for="price_min">From</label>
          <%= f.number_field :price_min, placeholder: 'e.g. 50$' %>
        </div>
        <div>
          <label for="price_max">To</label>
          <%= f.number_field :price_max, placeholder: 'e.g. 100$' %>
        </div>
        <%= f.submit 'Search', class: 'btn btn-primary' %>
      <% end %>
</div>
