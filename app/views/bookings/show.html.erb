<div class="car-title">
  <h1><%= @booking.car.brand %> <%= @booking.car.model %></h1>
</div>
<ul>
  <li><%= @booking.start_date %> to <%= @booking.end_date %></li>
  <li><%= @booking.car.price_per_hour %> $/h</li>
</ul>

<%= link_to "Edit booking", edit_user_car_booking_path(current_user, id: @booking.id, car_id: @booking.car)  %>
<%= link_to "Back", user_bookings_path(current_user)  %>
<%= link_to "Delete booking", user_car_booking_path(current_user, @booking.car, @booking), data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
